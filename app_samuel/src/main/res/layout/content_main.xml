<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nuni.ldh1.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView android:text="Sensores" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:id="@+id/scrollView2"
                android:layout_above="@+id/button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:fillViewport="false">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:id="@+id/texto"
                    android:layout_above="@+id/button"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </ScrollView>


            <Button
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:text="Podómetro"
                android:id="@+id/button3"
                android:layout_column="18"
                android:layout_marginTop="105dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:text="Giroscopio"
                android:id="@+id/button2"
                android:layout_column="11"
                android:layout_below="@+id/button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:text="Acelerómetro"
                android:id="@+id/button"
                android:layout_column="11"
                android:contextClickable="true"
                android:layout_alignTop="@+id/button3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:text="Barómetro"
                android:id="@+id/button4"
                android:layout_column="18"
                android:layout_alignBottom="@+id/button2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:text="Humedad"
                android:id="@+id/button5"
                android:layout_column="18"
                android:layout_below="@+id/button2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:text="Proximidad"
                android:id="@+id/button6"
                android:layout_column="18"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/button4"
                android:layout_alignStart="@+id/button4" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:text="Magnometro"
        android:id="@+id/button7"
        android:layout_column="18"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:text="Luz"
        android:id="@+id/button8"
        android:layout_column="18"
        android:layout_below="@+id/scrollView"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView" />

    <Button
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:text="Termometro"
        android:id="@+id/button9"
        android:layout_column="18"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:text="Pulsometro"
        android:id="@+id/button10"
        android:layout_column="18"
        android:layout_alignTop="@+id/button9"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView" />

</RelativeLayout>
